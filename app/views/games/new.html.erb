<h1>New Game</h1>

<div class="flex-container">
  <% @letters.each do |letter| %>
    <div><%= letter%></div>
  <% end %>
</div>

<div class="row  align-items-center mt-3">
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input class="col-10" type="text" name="word">
    <input class="col-1 btn btn-outline-secondary" type="submit" value="Play">
  </form>
</div>
